# vim: set ft=sh:
alias phpcheck="find . -name \*.php | xargs -n 1 php -l > /dev/null"
alias please='sudo $(history -p !!)'
alias postgres-start="postgres -D /usr/local/var/postgres"

alias gt='git tag --sort="version:refname"'
alias gdc="git diff --cached"
alias gap='git add --patch'

if [[ "$OSTYPE" == darwin* ]]; then
    alias lock='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'
fi

alias workon="pyenv activate"
alias p=pyenv
alias pip-pub="python setup.py --verbose sdist upload --repository"

alias update-vim-plugins="vim +PluginUpdate +qall"
alias ccat='pygmentize -g -O bg=dark,style=colorful,linenos=1'
alias mssh='i2cssh'
